@model NetProject.ViewModels.UsedPartViewModel
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "Dodaj część do czynności";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Create" method="post" class="needs-validation" novalidate>
    @Html.AntiForgeryToken()
    <input asp-for="ServiceTaskId" type="hidden" />

    <div class="mb-3">
        <label asp-for="PartId" class="form-label"></label>
        <select asp-for="PartId" asp-items="@(new SelectList(Model.Parts, "Id", "Name"))" class="form-select"></select>
        <span asp-validation-for="PartId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Quantity" class="form-label"></label>
        <input asp-for="Quantity" class="form-control" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Dodaj część</button>
    <a asp-controller="WorkOrders"
       asp-action="Details"
       asp-route-id="@Model.ServiceTaskId"
       class="btn btn-secondary">Anuluj</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}