@model IEnumerable<NetProject.Models.Customer>

<h1>Lista klientów</h1>
<a asp-action="Create" class="btn btn-primary mb-3">Dodaj nowego klienta</a>

<table class="table">
    <thead>
    <tr>
        <th>Imię i nazwisko</th>
        <th>Email</th>
        <th>Telefon</th>
        <th>Akcje</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var customer in Model)
    {
        <tr>
            <td>@customer.FullName</td>
            <td>@customer.Email</td>
            <td>@customer.PhoneNumber</td>
            <td>
                <a asp-action="Details" asp-route-id="@customer.Id" class="btn btn-info btn-sm">Profil</a>
                <a asp-action="Delete" asp-route-id="@customer.Id" class="btn btn-danger btn-sm">Usuń</a>
                <!-- inne akcje jeśli potrzebujesz -->
            </td>
        </tr>
    }
    </tbody>
</table>
